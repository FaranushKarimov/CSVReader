@model AspFormEditor.Models.Form

@{
    ViewBag.Title = "Редактор форм";
}
<div class="justify-content-md-center container margin-top">
    <div class=" offset-2 col-8 border border-dark work-field">
        <h2>Редактирование формы</h2>
        @using (Html.BeginForm("SaveForm", "Admin", FormMethod.Post, new { @id = "edit-form" }))
        {
            if(Model != null)
            {
                @Html.Partial("PartialViews/_Form", Model)
            }
            else
            {
                @Html.Partial("PartialViews/_Form")
            }
        }
        <div class="form-group">
            <button type="button" class="btn btn-link float-right">+Добавить поле</button>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-primary" onclick="">Закрыть</button>
            <button type="submit" class="btn btn-primary" form="edit-form">Сохранить</button>
        </div>
    </div>
</div>

@if (TempData["Message"] != null)
{
    <div class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    @TempData["Message"].ToString()
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
}