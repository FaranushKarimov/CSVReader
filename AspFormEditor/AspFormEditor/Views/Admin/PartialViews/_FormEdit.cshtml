@model AspFormEditor.Models.Form
@using AspFormEditor.Models;

@Html.ValidationSummary(false)
<div class="form-group">
    @Html.HiddenFor(model => model.FormId, new { @Value = (Model == null) ? "-1" : Model.FormId.ToString() })
    @Html.EditorFor(model => model.FormTitle, new { htmlAttributes = new { @class = "form-control", @required = "true", @placeholder = "Заголовок формы" } })
    @Html.ValidationMessageFor(model => model.FormTitle, "", new { @class = "text-danger" })
</div>
<div class="form-group">
    @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", @placeholder = "Описание формы", rows = 3 } })
    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
</div>
<h5>Поля формы</h5>
<div class="content-container">
    
    @if(Model != null)
    {
        if (Model.Fields != null && Model.Fields.Count > 0)
        {
            foreach (var item in Model.Fields)
            {
                Html.RenderPartial("PartialViews/_FieldBlock", item);
            }
        }
    } else
    {
        Html.RenderPartial("PartialViews/_FieldBlock", new Field());
    }

</div>